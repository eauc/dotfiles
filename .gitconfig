[alias]
	s = status
	co = checkout
        #######
        # diff
	d = diff
	dsw = diff -M
	dhw = diff -M HEAD
	dhs = diff -M --cached
        ######
        # log
	ls = log --graph --all --format=format:"%C(yellow)%h%C(bold\\ green)%d%C(reset)\\ %s\\ %C(blue)%an"
	ll = "!git ls --stat"
	ld = log --graph --all --format=format:"%C(yellow)%h%C(bold\\ green)%d%C(reset)\\ %s\\ %C(magenta)%ar\\ %C(blue)%an"
	lld = "!git ld --stat"
        #########
        # stash
        stsw = stash save -u
        stw = stash save -k -u
        sta = stash apply --index
        stp = stash pop --index
        ststats = stash show
        stdiff = stash show -p
        #########
        # commit
	c = commit
	unstage = reset HEAD
	addrm = "!git rm $(git ls-files --deleted)"
        m = merge --no-commit
        ########
        # Reset
        rh = reset --soft
        rhs = reset
        rhsm = reset --merge
        rhsw = reset --hard
        ########
        # clean
	discard = checkout --
        clean = clean -d
        purge = clean -x -f
        #########
        # branch
	b = branch
        bc = checkout -b
        #######
        # file
        g = grep -I --break
        gw = grep --untracked -I --break
        gs = grep --cached -I --break
        fl = rev-list --all --format=format:"%C(yellow)%h%C(bold\\ green)%d%C(reset)\\ %s\\ %C(blue)%an"
	fld = rev-list --all --format=format:"%C(yellow)%h%C(bold\\ green)%d%C(reset)\\ %s\\ %C(magenta)%ar\\ %C(blue)%an"
        #######
        # misc
	lalias = "!git config -l | grep alias | cut -c 7-"
	lasttag = describe --tags --abbrev=0
[user]
	name = Auclair Emmanuel
	email = auclair.emmanuel@gmail.com
[merge]
	tool = kdiff3
        conflictstyle = diff3
[color]
	ui = true
[filter "ws"]
	clean = remove_trailing_whitespaces.sh
	smudge = cat
[grep]
        lineNumber = true
[push]
	default = simple
